<form class="form-horizontal" id="passwordResetForm" method="post">
				<div id="error"></div>
	<div class="form-group">
		<label class="control-label col-xs-6"  for="oldPassword">Old Password</label>
		<div class="col-xs-6">
			<input type="password" name="oldPassword" id="oldPassword" class="form-control">
		</div>
	</div>	


	<div class="form-group">
		<label class="control-label col-xs-6"  for="password1">New Password</label>
		<div class="col-xs-6">
			<input type="password" name="password1" id="password1" class="form-control">
		</div>
	</div>	


	<div class="form-group">
		<label class="control-label col-xs-6"  for="password2">Repeat Password</label>
		<div class="col-xs-6">
			<input type="password" name="password2" id="password2" class="form-control">
		</div>
	</div>	


	<div class="form-group"> 
		<div class="col-xs-6 col-xs-offset-6">
			<button type="submit" class="btn btn-default">Reset</button>
		</div>
	</div>	
	
</form>